generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id       Int    @id @default(autoincrement())
  title    String
  authorId Int
  author   Author @relation(fields: [authorId], references: [id])
  copies   Copy[]
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Copy {
  id     Int    @id @default(autoincrement())
  bookId Int
  status String
  book   Book   @relation(fields: [bookId], references: [id])
  loans  Loan[]
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  loans Loan[]
}

model Loan {
  id         Int       @id @default(autoincrement())
  userId     Int
  copyId     Int
  loanDate   DateTime
  dueDate    DateTime
  returnDate DateTime?
  user       User      @relation(fields: [userId], references: [id])
  copy       Copy      @relation(fields: [copyId], references: [id])
}
